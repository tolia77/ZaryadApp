@page
@model IndexModel
@{
    ViewData["Title"] = "Профіль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.Name" class="form-label">Ім'я</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="submit-button">Зберегти</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
