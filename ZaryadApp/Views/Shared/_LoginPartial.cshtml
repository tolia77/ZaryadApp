@using Microsoft.AspNetCore.Identity
@using ZaryadApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <button style="background-color: burlywood; color: black" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Мій профіль
            </button>

            <div class="dropdown-menu dropdown-menu-dark dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" id="manage" class="dropdown-item text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Мій профіль</a>
                <form id="logoutForm" class="form-inline dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="dropdown-item btn btn-link text-light border-0">Вийти з аккаунта</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Зареєструватись</a>
        <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Ввійти</a>
    }
</nav>
